<div class="container">
  <div class="row">

    <div class="col-12">
      <p><%= link_to 'Add a Bookmark', new_list_bookmark_path(@list)%></p>
    </div>
    <div class="col-6">
      <h1><%= @list.name %></h1>
      <div class="col-6">
        <% @list.bookmarks.each do |bookmark| %>
          <p><%= bookmark.movie.title %></p>
          <p><%= bookmark.comment %></p>
          <%= link_to "Delete",
            bookmark_path(bookmark),
            data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
          %>
        <% end %>
      </div>
    </div>
  </div>
</div>